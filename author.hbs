{{!< default}}

<header class="blog-header" {{#if author.cover}}style="background-image: url({{author.cover}})"{{/if}}>
    <div class="vertical">
        <h1>Posts by {{author.name}}</h1>
    </div>
</header>

<div class="wrap">
    <section class="blog-content">

        {{#foreach posts}}

        <article class="{{post_class}}">
            <header class="post-header">
                {{#if image}}
                    {{#unless featured}}
                        <div class="post-cover" style="background-image: url({{image}})"></div>
                    {{/unless}}
                {{/if}}
            </header>
            <section class="post-excerpt">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                <section class="post-meta">
                    {{!-- <img class="author-img" src="{{author.image}}" alt="Author image" nopin="nopin" /> --}}
                    <span class="author-name">{{author}}</span>
                    &bull;
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="D MMM YYYY"}}</time>
                    <span class="tags">{{tags prefix="â€¢ " separator=" "}}</span>
                </section>
                <p>{{excerpt words="20"}}&hellip;</p>
            </section>
            <div class="clearfix"></div>
        </article>

        {{/foreach}}

        {{pagination}}

    </section>

    {{> sidebar}}

</div>
